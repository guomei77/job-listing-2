<section id="company">


     <h2>我们服务的企业</h2>
     <!-- companies -->
      <!--加横条-->
  <div id="company-intro" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#company-intro" data-slide-to="0" class="active"></li>
    <li data-target="#company-intro" data-slide-to="1"></li>
    <li data-target="#company-intro" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->

  <div class="carousel-inner" role="listbox">
    <div class="item active">

      <!-- <%= link_to image_tag("haomaiyi.png", :alt => "Slide1"), {:class => "img-responsive", :alt => "Responsive image"} %> -->
      <%= link_to 'http://www.haomaiyi.com' do %>
        <%= image_tag('/images/haomaiyi.png') %>
      <% end %>


      <div class="carousel-caption">
        <a href="http://www.haomaiyi.com" class="btn btn-lg btn-danger">进入公司主页</a>
      </div>
    </div>

    <div class="item">

      <%= link_to image_tag("hpe2.png", :alt => "Slide2"), {:class => "img-responsive", :alt => "Responsive image"} %>

      <div class="carousel-caption">
        <a href="https://www.hpe.com" class="btn btn-lg btn-danger">进入公司主页</a>
      </div>
    </div>
    <div class="item">

      <%= link_to image_tag("dxc.png", :alt => "Slide3"), {:class => "img-responsive", :alt => "Responsive image"} %>

      <div class="carousel-caption">
        <a href="http://www.dxc.technology" class="btn btn-lg btn-danger">进入公司主页</a>
      </div>
    </div>
  </div>
  <!-- Controls -->
  <a class="left carousel-control" href="#company-intro" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#company-intro" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
